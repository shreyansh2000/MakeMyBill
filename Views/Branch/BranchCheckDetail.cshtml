@{
    ViewData["Title"] = "BranchCheckDetail";
    Layout = "~/Views/Shared/_BranchLayout.cshtml";
}

@using (Html.BeginForm("BranchCheckDetail", "Branch", FormMethod.Post))
{
    <!-- Custom Theme files -->
    <link href="~/Login/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Login/css/font-awesome.min.css" rel="stylesheet" type="text/css" media="all" />

    <!-- //Custom Theme files -->
    <!-- web font -->
    <link href="//fonts.googleapis.com/css?family=Hind:300,400,500,600,700" rel="stylesheet">
    <!-- //web font -->

    <div class="w3layouts-main">
        <div class="bg-layer">
            <h1>Invoice</h1>
            <div class="header-main">
                <div class="main-icon">
                    <span class="fa fa-eercast"></span>
                </div>
                <div class="header-left-bottom">
                    <div class="icon1">
                        <span class="fa fa-user"></span>
                        <input type="text" placeholder="Enter Mobile number" id="Customerphone" name="Customerphone" required="" />
                    </div>
                    <div class="bottom">
                        <input type="submit" class="btn btn-primary" value="Check">
                    </div>
                    <div style="color:white">
                        
                    @if (TempData["name"] != null)
                    {
                        @TempData["name"] <br/>
                        @TempData["email"] <br/>
                        @TempData["phone"]  <br/>
                        @TempData["address"] <br/>

                      

                     
                        <a type="button" class="btn btn-primary" href="@Url.Action("BranchViewProductCart","Branch",new{customerid = @TempData["Customerid"]})"> Next </a>
                    }
                    </div>
                    
                </div>

            </div>

        </div>
    </div>
}

