@model MakeMyBill.Models.ProductMainCategoryMaster
@{
    ViewData["Title"] = "CompanyAddNewSubCategory";
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}

		<!-- Custom Theme files -->
	<link href="~/Login/css/style.css" rel="stylesheet" type="text/css" media="all" />
	<link href="~/Login/css/font-awesome.min.css" rel="stylesheet" type="text/css" media="all" />

	<!-- //Custom Theme files -->

	<!-- web font -->
	<link href="//fonts.googleapis.com/css?family=Hind:300,400,500,600,700" rel="stylesheet">
	<!-- //web font -->

@using(Html.BeginForm("CompanyAddNewSubCategory","Company",FormMethod.Post, new {  enctype= "multipart/form-data"}))
{
<div class="w3layouts-main"> 
	<div class="bg-layer">
		<h1>Add-New SubCategory</h1>
		<div class="header-main">
			<div class="main-icon">
				<span class="fa fa-eercast"></span>
			</div>
			<div class="header-left-bottom">
				
				<input type="hidden" id="Catid" name="Catid" value=@TempData["catid"]>
					<div class="icon1">
						<span class="fa fa-user"></span>
						<input type="text" placeholder="SubCategory Name" id="Scname" name="Scname"/>
					</div>
					<div class="icon1">
						<span class="fa fa-book"></span>
						<input type="file" id="Scimage" name="Scimage" accept="image/*"/>
					</div>
						<div class="icon1">
						<span class="fa fa-user"></span>
						<input type="text" placeholder="SubCategory Description" id="Scdesc" name="Scdesc"/>
					</div>
						<div class="icon1">
						<span class="fa fa-user"></span>
						<input type="text" placeholder="SubCategory Price per unit" id="Scpriceperunit" name="Scpriceperunit"/>
					</div>
					
					<div class="bottom">
                            <input type="submit"  class="btn btn-primary" value="Add">
                     </div>
			</div>
			
		</div>
		
	</div>
</div>	
}



